<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.VSCodroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar and navigation bar match editor background -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <!-- Window background: VS Code dark editor -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Ensure dark appearance for system UI elements -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

</resources>
